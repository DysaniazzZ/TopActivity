<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.dysania.topactivity">

  <uses-permission android:name="android.permission.GET_TASKS"/>

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <activity android:name=".SettingsActivity"
      android:launchMode="singleInstance">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <!--普通的服务，用于Android5.0前使用-->
    <service
      android:enabled="@bool/use_tracker_service"
      android:name=".TrackerService"/>

    <!--辅助功能的服务，用于Android5.0后使用-->
    <service
      android:enabled="@bool/use_tracker_accessibility_service"
      android:name=".TrackerAccessibilityService"
      android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
      <intent-filter>
        <action android:name="android.accessibilityservice.AccessibilityService"/>
      </intent-filter>

      <meta-data
        android:name="android.accessibilityservice"
        android:resource="@xml/accessibility_service_config"/>
    </service>

  </application>

</manifest>